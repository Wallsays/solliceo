<%= simple_form_for(@application, html: {class: "form-horizontal"}) do |f| %>
    <%= @application.errors.full_messages.to_sentence %>

    <%= hidden_field_tag :return_url, params[:return_url] || request.referrer %>
    <%= f.input :from, label: 'From email address', input_html: {class: 'span12'} %>
    <%= f.input :emails, label: 'Email addresses', input_html: {class: 'span12', placeholder: 'info@company1.com, resume@company2.com'} %>
    <%= f.input :subject, input_html: {class: 'span12'} %>
    <%= f.input :text_body, as: 'text', input_html: {rows: 10, class: 'span12'} %>
    <%= f.input :html_body, as: 'text', input_html: {rows: 10, class: 'span12 needs_html_editor'} %>
    <div class="control-group">
        <div class="controls">
            <%= f.submit 'Send Application', class: 'btn btn-primary' %>
            <%= link_to 'Back', :back, class: 'btn' %>
        </div>
    </div>
<% end %>