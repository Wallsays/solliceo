<% url = @file.new_record? ? viewer_files_path(@viewer) : viewer_file_path(@viewer, @file) %>

<%= simple_form_for @file, :url => url, :html => { :multipart => true } do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name %>
  	<%= f.input :file %>
  </div>

  <div class="form-actions">
  	<%= f.submit "Upload" %>
  </div>
<% end %>